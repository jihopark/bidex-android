<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>

    </style>

    <style name="ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_color</item>
        <item name="background">@color/main_color</item>
    </style>

    <style name="DefaultTextColor">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Splash">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="DealTitle" parent="@style/DefaultTextColor">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="DealDetail" parent="@style/DefaultTextColor">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TopBidNumber">
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TopBidDetail" parent="@style/DefaultTextColor">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BidNumber">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BidDetail" parent="@style/DefaultTextColor">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BidButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
